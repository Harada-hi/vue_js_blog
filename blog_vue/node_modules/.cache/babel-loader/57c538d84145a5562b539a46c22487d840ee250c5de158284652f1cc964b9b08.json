 = Math.ceil(this.baselists.length / this.pageRange);\n        this.showlists = this.baselists.slice(0, 4);\n        this.frc = 1;\n      }\n      //ページネーションを操作するなりなんなりの処理を入れて「絞り込み時に表示も切り替わる」ようにしなきゃいけないですねえ\n      //ページカウントも可変式に\n    },\n    postGive() {\n      const radioEm = [];\n      const blogEm = [];\n      getPost(radioEm, blogEm);\n      this.$emit('postTo', radioEm, blogEm);\n    },\n    listin() {\n      this.baselists = this.lists;\n      this.showlists = this.baselists.slice(0, this.pageRange);\n      this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\n    }\n  },\n  mounted() {\n    if (this.blog.length === 0) {\n      console.log(\"noinject\");\n      this.postGive();\n      console.log(this.blog);\n      this.showlists = this.blog;\n    } else {\n      this.lists = this.blog;\n    }\n    this.loading = false;\n    this.listin();\n    this.buttonChange();\n  }\n};","map":{"version":3,"names":["ArticleSearch","Paginate","Meta","getPost","name","components","inject","data","pageCount","showlists","baselists","lists","pageRange","frc","loading","methods","buttonChange","radio","document","querySelector","blog","classList","contains","remove","add","clickCallback","pageNumber","slice","catSea","e","Math","ceil","length","i","tag","push","postGive","radioEm","blogEm","$emit","listin","mounted","console","log"],"sources":["C:\\xampp\\htdocs\\radio-second\\src\\views\\ArticleList.vue"],"sourcesContent":["<template>\r\n  <Meta></Meta>\r\n  <div v-show=\"loading\" class=\"loader\">Now loading...</div>\r\n  <div v-show=\"!loading\" class=\"out\">\r\n    <article-search v-on:category-search=\"catSea\"></article-search>\r\n    <div class=\"article_list\">\r\n      <div\r\n        class=\"article_cards\"\r\n        v-for=\"item in showlists\"\r\n        v-bind:key=\"item.link\"\r\n      >\r\n        <div class=\"article_thumb\">\r\n          <router-link class=\"thumb_link\" v-bind:to=\"item.link\">\r\n            <img :src=\"item.thumb\" />\r\n          </router-link>\r\n        </div>\r\n        <div class=\"article_txt\">\r\n          <div class=\"cat_day\">\r\n            <div class=\"category\">{{ item.tag }}</div>\r\n            <div class=\"day\">{{ item.date }}</div>\r\n          </div>\r\n          <div class=\"title\">\r\n            <router-link v-bind:to=\"item.link\">\r\n              <h1>{{ item.title }}</h1>\r\n            </router-link>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <paginate\r\n      :page-count=\"pageCount\"\r\n      :click-handler=\"clickCallback\"\r\n      :page-range=\"pageRange\"\r\n      :prev-text=\"'<'\"\r\n      :next-text=\"'>'\"\r\n      :force-page=\"frc\"\r\n    ></paginate>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport ArticleSearch from \"../components/ArticleSearch.vue\";\r\nimport Paginate from \"vuejs-paginate-next\";\r\nimport Meta from '../components/meta.vue'\r\nimport {getPost} from '../utiles/module.js'\r\n\r\n\r\nexport default {\r\n  name: \"articleList\",\r\n  components: { ArticleSearch, Paginate,Meta },\r\n  inject: [\"blog\"],\r\n  data() {\r\n    return {\r\n      pageCount: 1,\r\n      showlists: [],\r\n      baselists: [],\r\n      lists: [],\r\n      pageRange: 4,\r\n      frc: 1,\r\n      loading:true\r\n      //force-pageが今のページネーション側のページ数の数字なので、絞り込みが発動した時にそこの値を1に変えちまえばページネーションの挙動がおかしくならないんでつね～！\r\n\r\n      //listとshowlistの間にもう一個配列が必要。絞り込み検索のときにlistから絞り込み条件に合致する内容を持ってきて配列を作って、そこからshowlistに持ってくる形にしないといけない。なのでページネーションの数を決めるやつも真ん中のヤツベースにする。真ん中のやつとページネーションでshowlistと真ん中のやつを更新するようにすればリアクティブ化は成立するかな？なのでコンポーネント間の値の受け渡しをできるようにこれを書き換えないといけないワケなんだよなぁ。\r\n    };\r\n  },\r\n  methods: {\r\n    buttonChange(){\r\n      const radio = document.querySelector('.fa-radio')\r\n      const blog = document.querySelector('.fa-newspaper')\r\n      if (radio.classList.contains('no-select')) {\r\n        radio.classList.remove('no-select')\r\n        blog.classList.add('no-select')\r\n      } else {\r\n        if(blog.classList.contains('no-select') === false)\r\n        blog.classList.add('no-select')\r\n      }\r\n    },\r\n    clickCallback(pageNumber) {\r\n      this.frc = pageNumber;\r\n      this.showlists = this.baselists.slice(\r\n        this.pageRange * (pageNumber - 1),\r\n        this.pageRange * pageNumber\r\n      );\r\n    },\r\n    catSea(e) {\r\n      if (e === \"\") {\r\n        this.baselists = this.lists;\r\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\r\n        this.showlists = this.baselists.slice(0, 4);\r\n        this.frc = 1;\r\n      } else {\r\n        this.baselists = [];\r\n        for (let i = 0; i < this.lists.length; i++) {\r\n          if (e === this.lists[i].tag) {\r\n            this.baselists.push(this.lists[i]);\r\n          }\r\n        }\r\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\r\n        this.showlists = this.baselists.slice(0, 4);\r\n        this.frc = 1;\r\n      }\r\n      //ページネーションを操作するなりなんなりの処理を入れて「絞り込み時に表示も切り替わる」ようにしなきゃいけないですねえ\r\n      //ページカウントも可変式に\r\n    },\r\n    postGive(){\r\n      const radioEm = []\r\n      const blogEm =[]\r\n      getPost(radioEm,blogEm)\r\n      this.$emit('postTo',radioEm,blogEm)\r\n    },\r\n    listin(){\r\n           this.baselists = this.lists\r\n           this.showlists = this.baselists.slice(0,this.pageRange)\r\n           this.pageCount = Math.ceil(this.baselists.length/this.pageRange);\r\n    }\r\n  },\r\nmounted() {\r\n  if(this.blog.length===0){\r\n    console.log(\"noinject\")\r\n    this.postGive()\r\n    console.log(this.blog)\r\n    this.showlists = this.blog\r\n  } else {\r\n    this.lists = this.blog\r\n  }\r\n  this.loading = false;\r\n  this.listin();\r\n  this.buttonChange();\r\n    }\r\n};\r\n</script>\r\n\r\n<style>\r\n.out {\r\n  padding: 50px 0;\r\n  min-height: calc(100vh - 50px);\r\n}\r\n\r\n.article_list {\r\n  display: grid;\r\n  grid-template-columns: 1fr; /* 子要素を縦並び */\r\n  gap: 0; /* 隙間なし */\r\n  max-width: 800px;\r\n 