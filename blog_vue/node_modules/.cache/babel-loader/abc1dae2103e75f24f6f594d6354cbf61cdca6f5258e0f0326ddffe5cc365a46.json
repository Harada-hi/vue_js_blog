ler } from '../utiles/article.js'\r\nimport Paginate from 'vuejs-paginate-next';\r\n\r\n\r\n\r\nexport default {\r\n    name: 'articleList',\r\n    components: { ArticleSearch,Paginate},\r\n        data() {\r\n            return {\r\n                pageCount: 1,\r\n                showlists: [],\r\n                baselists:[],\r\n                lists:[],\r\n                pageRange: 4,\r\n                frc:1\r\n                //force-pageが今のページネーション側のページ数の数字なので、絞り込みが発動した時にそこの値を1に変えちまえばページネーションの挙動がおかしくならないんでつね～！\r\n\r\n\r\n                //listとshowlistの間にもう一個配列が必要。絞り込み検索のときにlistから絞り込み条件に合致する内容を持ってきて配列を作って、そこからshowlistに持ってくる形にしないといけない。なのでページネーションの数を決めるやつも真ん中のヤツベースにする。真ん中のやつとページネーションでshowlistと真ん中のやつを更新するようにすればリアクティブ化は成立するかな？なのでコンポーネント間の値の受け渡しをできるようにこれを書き換えないといけないワケなんだよなぁ。\r\n            }\r\n        },\r\n        methods: {\r\n            clickCallback(pageNumber){\r\n                this.frc=pageNumber\r\n                this.showlists = this.baselists.slice(this.pageRange*(pageNumber -1),this.pageRange*(pageNumber))\r\n            },\r\n            catSea(e) {\r\n                if (e === \"\") {\r\n                    this.baselists = this.lists\r\n                    this.pageCount = Math.ceil(this.baselists.length/this.pageRange);\r\n                    this.showlists = this.baselists.slice(0,3)\r\n                    this.frc=1\r\n                } else {\r\n                this.baselists = []\r\n                for (let i=0; i < this.lists.length; i++) {\r\n                    if(e === this.lists[i].category) {\r\n                        this.baselists.push(this.lists[i])\r\n                    }\r\n                }\r\n                this.pageCount = Math.ceil(this.baselists.length/this.pageRange);\r\n                this.showlists = this.baselists.slice(0,3)\r\n                this.frc=1\r\n            }\r\n                //ページネーションを操作するなりなんなりの処理を入れて「絞り込み時に表示も切り替わる」ようにしなきゃいけないですねえ\r\n                //ページカウントも可変式に\r\n            }\r\n        },\r\n        mounted() {\r\n           this.lists = articler\r\n           this.baselists = articler\r\n           this.showlists = this.baselists.slice(0,this.pageRange)\r\n           this.pageCount = Math.ceil(this.baselists.length/this.pageRange);\r\n        }\r\n\r\n\r\n\r\n}\r\n</script>\r\n\r\n<style>\r\n.article_list {\r\n  display: grid;\r\n  grid-template-columns: 1fr; /* 子要素を縦並び */\r\n  gap: 0; /* 隙間なし */\r\n  max-width: 800px;\r\n  margin: 0 auto; /* 中央寄せ */\r\n}\r\n\r\n.article_cards {\r\n  display: flex;\r\n  align-items: flex-start;\r\n  padding: 16px;\r\n  position: relative;\r\n}\r\n\r\n.article_cards::after {\r\n  content: \"\";\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  border-bottom: 2px dashed #ccc; /* 破線の区切り */\r\n}\r\n\r\n.article_thumb {\r\n  flex: 0 0 30%;\r\n  max-width: 30%;\r\n  min-width: 125px;\r\n  height: 100%;\r\n}\r\n\r\n.article_thumb img {\r\n  width: 100%;\r\n  height: 100%;\r\n\r\n}\r\n\r\n\r\n.article_txt {\r\n  flex: 1;\r\n  display: flex;\r\n  flex-direction: column;\r\n   /* 上揃え */\r\n  padding-left: 16px;\r\n}\r\n\r\n.cat_day {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 8px;\r\n  font-size: 12px;\r\n}\r\n\r\n.category {\r\n  background: black;\r\n  color: white;\r\n  font-weight: bold;\r\n  font-size: 12px;\r\n  padding: 4px 8px;\r\n  width: 40px; /* 横幅固定 */\r\n  text-align: center; /* 文字中央揃え */\r\n}\r\n\r\n.day {\r\n  color: #888;\r\n  font-weight: bold;\r\n}\r\n\r\n.title {\r\n  margin-top: 8px;\r\n}\r\n\r\n.title h1 {\r\n    font-size: 14px;\r\n  margin: 0;\r\n}\r\n\r\n/* タブレットのレスポンシブ対応 */\r\n@media (min-width: 768px) {\r\n  .article_list {\r\n    max-width: 900px;\r\n    grid-template-columns: repeat(3, 1fr); /* 横に3列 */\r\n  }\r\n  .article_thumb {\r\n    max-width: none;\r\n  }\r\n\r\n  .article_txt {\r\n    padding-left: 0;\r\n  }\r\n\r\n  .article_cards {\r\n    flex-direction: column;\r\n  }\r\n\r\n  .title h1 {\r\n    font-size: 18px;\r\n  margin: 0;\r\n}\r\n}\r\n\r\n/* PCのレ