.log(this.baselists);\n      this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\n    }\n  },\n  beforeMount() {\n    this.test3();\n  },\n  mounted() {\n    this.onloads();\n  }\n};","map":{"version":3,"names":["ArticleSearch","Paginate","name","components","inject","data","pageCount","showlists","baselists","lists","pageRange","frc","methods","clickCallback","pageNumber","slice","catSea","e","Math","ceil","length","i","tag","push","test3","radio","console","log","onloads","beforeMount","mounted"],"sources":["C:\\xampp\\htdocs\\radio-second\\src\\views\\RadioList.vue"],"sourcesContent":["<template>\r\n  <div class=\"out\">\r\n    <article-search v-on:category-search=\"catSea\"></article-search>\r\n    <div class=\"article_list\">\r\n      <div\r\n        class=\"article_cards\"\r\n        v-for=\"item in showlists\"\r\n        v-bind:key=\"item.link\"\r\n      >\r\n        <div class=\"article_thumb\">\r\n          <router-link v-bind:to=\"item.link\">\r\n            <img :src=\"item.thumb\" />\r\n          </router-link>\r\n        </div>\r\n        <div class=\"article_txt\">\r\n          <div class=\"cat_day\">\r\n            <div class=\"category\">{{ item.tag }}</div>\r\n            <div class=\"day\">{{ item.date }}</div>\r\n          </div>\r\n          <div class=\"title\">\r\n            <router-link v-bind:to=\"item.link\">\r\n              <h1>{{ item.title }}</h1>\r\n            </router-link>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <paginate\r\n      :page-count=\"pageCount\"\r\n      :click-handler=\"clickCallback\"\r\n      :page-range=\"pageRange\"\r\n      :prev-text=\"'<'\"\r\n      :next-text=\"'>'\"\r\n      :force-page=\"frc\"\r\n    ></paginate>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport ArticleSearch from \"../components/ArticleSearch.vue\";\r\n\r\nimport Paginate from \"vuejs-paginate-next\";\r\n\r\n\r\nexport default {\r\n  name: \"articleList\",\r\n  components: { ArticleSearch, 