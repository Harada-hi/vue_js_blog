{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport ArticleSearch from \"../components/ArticleSearch.vue\";\nimport Paginate from \"vuejs-paginate-next\";\nimport axios from 'axios';\nexport default {\n  name: \"articleList\",\n  components: {\n    ArticleSearch,\n    Paginate\n  },\n  inject: [\"radio\"],\n  data() {\n    return {\n      pageCount: 1,\n      showlists: [],\n      baselists: [],\n      lists: [],\n      pageRange: 4,\n      frc: 1,\n      loading: true\n      //force-pageが今のページネーション側のページ数の数字なので、絞り込みが発動した時にそこの値を1に変えちまえばページネーションの挙動がおかしくならないんでつね～！\n\n      //listとshowlistの間にもう一個配列が必要。絞り込み検索のときにlistから絞り込み条件に合致する内容を持ってきて配列を作って、そこからshowlistに持ってくる形にしないといけない。なのでページネーションの数を決めるやつも真ん中のヤツベースにする。真ん中のやつとページネーションでshowlistと真ん中のやつを更新するようにすればリアクティブ化は成立するかな？なのでコンポーネント間の値の受け渡しをできるようにこれを書き換えないといけないワケなんだよなぁ。\n    };\n  },\n  methods: {\n    clickCallback(pageNumber) {\n      this.frc = pageNumber;\n      this.showlists = this.baselists.slice(this.pageRange * (pageNumber - 1), this.pageRange * pageNumber);\n    },\n    catSea(e) {\n      if (e === \"\") {\n        this.baselists = this.lists;\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\n        this.showlists = this.baselists.slice(0, 4);\n        this.frc = 1;\n      } else {\n        this.baselists = [];\n        for (let i = 0; i < this.lists.length; i++) {\n          if (e === this.lists[i].tag) {\n            this.baselists.push(this.lists[i]);\n          }\n        }\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\n        this.showlists = this.baselists.slice(0, 4);\n        this.frc = 1;\n      }\n      //ページネーションを操作するなりなんなりの処理を入れて「絞り込み時に表示も切り替わる」ようにしなきゃいけないですねえ\n      //ページカウントも可変式に\n    },\n    postList() {\n      let ths = this;\n      axios.get('http://localhost/radio-site/wordpress/wp-json/wp/v2/posts/').then(function (response) {\n        for (let i = 0; i < response.data.length; i++) {\n          if (response.data[i].categories_info[0].name === \"ラジオ\") {\n            let dates = new Date(response.data[i].date);\n            ths.lists.push({\n              category: response.data[i].categories_info[0].name,\n              title: response.data[i].title.rendered,\n              date: dates.getFullYear() + '-' + (dates.getMonth() + 1) + '-' + dates.getDate(),\n              thumb: response.data[i].thumbnail_url,\n              tag: response.data[i].tags_info[0].name,\n              link: '/post/' + response.data[i].id\n            });\n          } else {\n            console.log(\"とばすよ～ん\");\n          }\n        }\n        ths.loading = false;\n        ths.listin();\n      }).catch(function (error) {\n        console.log(error);\n      });\n    },\n    listin() {\n      this.baselists = this.lists;\n      this.showlists = this.baselists.slice(0, this.pageRange);\n      this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\n    }\n  },\n  mounted() {\n    this.postList();\n  },\n  beforeUpdate() {\n    console.log(this.radio);\n  }\n};","map":{"version":3,"names":["ArticleSearch","Paginate","axios","name","components","inject","data","pageCount","showlists","baselists","lists","pageRange","frc","loading","methods","clickCallback","pageNumber","slice","catSea","e","Math","ceil","length","i","tag","push","postList","ths","get","then","response","categories_info","dates","Date","date","category","title","rendered","getFullYear","getMonth","getDate","thumb","thumbnail_url","tags_info","link","id","console","log","listin","catch","error","mounted","beforeUpdate","radio"],"sources":["C:\\xampp\\htdocs\\radio-second\\src\\views\\RadioList.vue"],"sourcesContent":["<template>\r\n  <div v-show=\"loading\" class=\"loader\">Now loading...</div>\r\n  <div v-show=\"!loading\" class=\"out\">\r\n    <article-search v-on:category-search=\"catSea\"></article-search>\r\n    <div class=\"article_list\">\r\n      <div\r\n        class=\"article_cards\"\r\n        v-for=\"item in showlists\"\r\n  