r\n    catSea(e) {\r\n      if (e === \"\") {\r\n        this.baselists = this.lists;\r\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\r\n        this.showlists = this.baselists.slice(0, 4);\r\n        this.frc = 1;\r\n      } else {\r\n        this.baselists = [];\r\n        for (let i = 0; i < this.lists.length; i++) {\r\n          if (e === this.lists[i].tag) {\r\n            this.baselists.push(this.lists[i]);\r\n          }\r\n        }\r\n        this.pageCount = Math.ceil(this.baselists.length / this.pageRange);\r\n        this.showlists = this.baselists.slice(0, 4);\r\n        this.frc = 1;\r\n      }\r\n      //ページネーションを操作するなりなんなりの処理を入れて「絞り込み時に表示も切り替わる」ようにしなきゃいけないですねえ\r\n      //ページカウントも可変式に\r\n    },\r\n    postList(){\r\n      let ths = this;\r\n\r\n      axios\r\n      .get('http://localhost/radio-site/wordpress/wp-json/wp/v2/posts/')\r\n      .then(function(response){\r\n\r\n        for(let i = 0; i < response.data.length; i++) {\r\n          if(response.data[i].categories_info[0].name === \"ラジオ\"){\r\n            let dates = new Date(response.data[i].date)\r\n            ths.lists.push(\r\n              { \r\n                \r\n                category: response.data[i].categories_info[0].name,\r\n                title: response.data[i].title.rendered,\r\n                date: dates.getFullYear() + '-' + (dates.getMonth() + 1) + '-' + dates.getDate(),\r\n                thumb: response.data[i].thumbnail_url,\r\n                tag:  response.data[i].tags_info[0].name,\r\n                link : '/post/' + response.data[i].id,\r\n              }\r\n              \r\n            )\r\n\r\n\r\n        } else {\r\n            console.log(\"とばすよ～ん\")\r\n          }\r\n        }\r\n        ths.loading = false;\r\n        ths.listin();\r\n\r\n      })\r\n      .catch(function(error) {\r\n        console.log(error);\r\n      });\r\n\r\n    },\r\n    listin(){\r\n           this.baselists = this.lists\r\n           this.showlists = this.baselists.slice(0,this.pageRange)\r\n           this.pageCount = Math.ceil(this.baselists.length/this.pageRange);\r\n    }\r\n  },\r\nmounted() {\r\n  this.postList();\r\n      \r\n    },\r\n    beforeUpdate(){\r\n      console.log(this.radio)\r\n    }\r\n};\r\n</script>\r\n\r\n<style>\r\n.out {\r\n  padding: 50px 0;\r\n  min-height: calc(100vh - 50px);\r\n}\r\n\r\n.article_list {\r\n  display: grid;\r\n  grid-template-columns: 1fr; /* 子要素を縦並び */\r\n  gap: 0; /* 隙間なし */\r\n  max-width: 800px;\r\n  margin: 0 auto; /* 中央寄せ */\r\n}\r\n\r\n.article_cards {\r\n  display: flex;\r\n  align-items: flex-start;\r\n  padding: 16px;\r\n  position: relative;\r\n}\r\n\r\n.article_cards::after {\r\n  content: \"\";\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  border-bottom: 2px dashed #ccc; /* 破線の区切り */\r\n}\r\n\r\n.article_thumb {\r\n  display: flex;\r\n  flex: 0 0 30%;\r\n  max-width: 30%;\r\n  min-width: 125px;\r\n  height: 100%;\r\n}\r\n\r\n.article_thumb img {\r\n  width: 100%;\r\n align-items: center;\r\n}\r\n\r\n.article_txt {\r\n  flex: 1;\r\n  display: flex;\r\n  flex-direction: column;\r\n  /* 上揃え */\r\n  padding-left: 16px;\r\n}\r\n\r\n.cat_day {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 8px;\r\n  font-size: 12px;\r\n}\r\n\r\n.category {\r\n  background: black;\r\n  color: white;\r\n  font-weight: bold;\r\n  font-size: 12px;\r\n  padding: 4px 8px;\r\n  width: 60px; /* 横幅固定 */\r\n  text-align: center; /* 文字中央揃え */\r\n  border-radius: 5%;\r\n}\r\n\r\n.day {\r\n  color: #888;\r\n  font-weight: bold;\r\n}\r\n\r\n.title {\r\n  margin-top: 8px;\r\n}\r\n\r\n.title h1 {\r\n  font-size: 14px;\r\n  margin: 0;\r\n}\r\n\r\n/* タブレットのレスポンシブ対応 */\r\n@media (min-width: 768px) {\r\n  .article_list {\r\n    max-width: 900px;\r\n    grid-template-columns: repeat(3, 1fr); /* 横に3列 */\r\n  }\r\n  .article_thumb {\r\n    max-width: none;\r\n  }\r\n\r\n  .article_txt {\r\n    padding-left: 0;\r\n  }\r\n\r\n  .article_cards {\r\n    flex-direc